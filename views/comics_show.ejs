<%- include("partials/header") %>

    <div class="container">
        <div class="row mt-4">
            <div class="col-6 show_image-container">
                <img src="<%= comic.image %>" alt="">
            </div>

            <div class="col-6 show_details-container">
                <h1><%= comic.title %></h1>
                <p><%= comic.description %></p>

                <table class="table">
                    
                    <tbody>

                      <tr>
                        <th scope="row">Author</th>
                        <td><%= comic.author %></td>
                      </tr>

                      <tr>
                        <th scope="row">Publisher</th>
                        <td><%= comic.publisher %></td>
                      </tr>

                      <tr>
                        <th scope="row">Date</th>
                        <td><%= comic.date %></td>
                      </tr>

                      <tr></tr>
                        <th scope="row">Series</th>
                        <td><%= comic.series %></td>
                      </tr>

                      <tr></tr>
                        <th scope="row">Issue</th>
                        <td><%= comic.issue %></td>
                      </tr>

                      <tr></tr>
                        <th scope="row">Genre</th>
                        <td><%= comic.genre %></td>
                      </tr>

                      <tr></tr>
                        <th scope="row">Color</th>
                        <td><%= comic.color %></td>
                      </tr>
                    </tbody>
                  </table>
            </div>
        </div>
        <div class="row show_comment-hearder mt-3">
            COMMENTS
        </div>

        <% if (comments.length === 0) { %>
          
          <div class="col3">
            There are no comments yet. Be the first to share your thoughts!
        </div>
        <% } else { %>
          <% comments.forEach((comment) => { %>
            <div class="row show_comment-container py-2">
              <div class="col-3">
                <strong><%= comment.user %></strong>
              </div>
              <div class="col-9">
                <p><%= comment.text %></p>
              </div>
            </div>
          <% }) %>
        <% } %>
      
        
        
    </div>

<%- include("partials/footer") %>